---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
const { currentLocale } = Astro;
---

<footer
  class="opacity-80 m-4 min-[375px]:pl-4 md:pl-0 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex flex-col"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto md:flex md:items-center md:justify-between py-1"
  >
    <span class="text-sm sm:text-center text-zinc-800/90 dark:text-zinc-200/90"
      >Â© {currentYear}
      {t("footer.signature")}
    </span>
    <ul
      class="flex flex-wrap items-center mt-3 text-sm font-medium dark:text-white/90 sm:mt-0"
    >
      <li>
        <a
          href={currentLocale === "en" ? "/en/#home" : "/#home"}
          class="hover:underline me-4 md:me-6">{t("nav.goBackHome")}</a
        >
      </li>
      <li>
        <a
          id="contacto"
          href="mailto:serra.raf@gmail.com"
          class="hover:underline">{t("nav.contact")}</a
        >
      </li>
    </ul>
  </div>
  <div
    class="flex mt-0 text-xs text-zinc-800/70 dark:text-zinc-200/70 text-left w-full"
  >
    {t("footer.rights")} &nbsp;<a
      href="https://github.com/midudev/porfolio.dev"
      class="hover:underline"
    >
      midudev</a
    >
  </div>
</footer>
