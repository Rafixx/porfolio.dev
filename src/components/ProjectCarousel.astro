---
import NavNext from "./icons/NavNext.astro";
import NavPrev from "./icons/NavPrev.astro";

interface Props {
  image1: string;
  image2: string;
  image3: string;
  image4: string;
  imageAlt: string;
}

const { image1, image2, image3, image4 } = Astro.props;
---

<div id="indicators-carousel" class="relative w-full" data-carousel="static">
  <!-- Carousel wrapper -->
  <div class="relative h-56 overflow-hidden md:h-96 rounded-lg">
    <!-- Item 1 -->
    <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
      <img
        src={image1}
        class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
        alt="..."
      />
    </div>
    <!-- Item 2 -->
    <div class="hidden duration-700 ease-in-out" data-carousel-item>
      <img
        src={image2}
        class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
        alt="..."
      />
    </div>
    <!-- Item 3 -->
    <div class="hidden duration-700 ease-in-out" data-carousel-item>
      <img
        src={image3}
        class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
        alt="..."
      />
    </div>
    <!-- Item 4 -->
    {
      image4 && (
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
          <img
            src={image4}
            class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="..."
          />
        </div>
      )
    }
  </div>
  <div class="flex flex-row items-center w-full h-20 justify-center">
    <!-- Slider controls -->
    <button
      type="button"
      class="mx-10 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
      data-carousel-prev
    >
      <NavPrev />
    </button>

    <!-- Slider indicators -->
    <div
      class="z-30 flex -translate-x-1/2 space-x-3 rtl:space-x-reverse left-1/2"
    >
      <button
        type="button"
        class="w-3 h-3 rounded-full"
        aria-current="true"
        aria-label="Slide 1"
        data-carousel-slide-to="0"></button>
      <button
        type="button"
        class="w-3 h-3 rounded-full"
        aria-current="false"
        aria-label="Slide 2"
        data-carousel-slide-to="1"></button>
      <button
        type="button"
        class="w-3 h-3 rounded-full"
        aria-current="false"
        aria-label="Slide 3"
        data-carousel-slide-to="2"></button>
      {
        image4 && (
          <button
            type="button"
            class="w-3 h-3 rounded-full"
            aria-current="false"
            aria-label="Slide 4"
            data-carousel-slide-to="3"
          />
        )
      }
    </div>

    <button
      type="button"
      class="z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
      data-carousel-next
    >
      <NavNext />
    </button>
  </div>
</div>
